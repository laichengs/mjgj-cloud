.container{

}
.cover{
  position: fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  transition: all .3s;
}
.cover{
  height: 100%;
  width: 100%;
  background: #000;
  opacity: .0;
  z-index: 300;
}
.cover.active{
  opacity: .5;
}
.content{
  border-radius: 20rpx 20rpx 0 0 ;
  z-index: 400;
  width:100%;
  background: #fff;
  position: fixed;
  bottom:0;
  visibility: hidden;
  transform: translateY(100%);
  transition: all .3s ease-in-out;
  min-height: 100rpx;
  padding:30rpx;
  box-sizing: border-box;
}
.content.active{
  transform: translateY(0);
  visibility: visible;
}
.section{
  position: relative;
}
.top{
  display: flex;
  justify-content: space-between;
}
.title{
  font-size:36rpx;
  font-weight: bold;
  color:#000;
}
