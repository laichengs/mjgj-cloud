text {
  font-size: 28rpx;
}
h3 {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
}
page {
  /* --color: #db5651;
  --bg: #db5651;
  --less-bg: #faebed; */
  --color: #db5651;
  --bg: #db5651;
  --less-bg: #faebed;
  --less-color: #e98e8b;
}
.line {
  width: 750rpx;
  height: 20rpx;
  background: #f8f8f8;
}
.btn-box {
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* height: 110rpx; */
  padding: 20rpx 0rpx;
}
.btn-box.ipx {
  padding-bottom: 60rpx;
}
.btn {
  width: 690rpx !important;
  background: linear-gradient(to right, var(--less-color), var(--color));
  height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}
.btn-bg {
  background: linear-gradient(to right, var(--less-color), var(--color));
}
.btn-fixed {
  position: fixed;
  left: 30rpx;
  bottom: 30rpx;
}
.round {
  border-radius: 90rpx;
}
.btn-shadow {
  /* box-shadow: 0 6px 12px #ecdca0; */
}
.left {
  margin-left: 30rpx;
}
