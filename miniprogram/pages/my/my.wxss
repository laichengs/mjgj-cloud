@import '../../font.wxss';

.container {
  padding-top: 20rpx;
}

.top {
  width: 690rpx;
  position: relative;
  height: 300rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.card-bg {
  width: 690rpx;
  height: 300rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.user {
  z-index: 1;
  display: flex;
  align-items: center;
  position: absolute;
  left: 30rpx;
  top: 34rpx;
}

.avatar {
  border-radius: 92rpx;
  overflow: hidden;
  height: 92rpx;
  width: 92rpx;
}
.user-avatar {
  background: #fff;
  border-radius: 92rpx;
  overflow: hidden;
  height: 92rpx;
  width: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.default-avatar {
  width: 60rpx;
  height: 60rpx;
}

.nick-name {
  color: #fff;
  margin-left: 20rpx;
  font-size: 32rpx;
}

.member-classify {
  display: flex;
  width: 600rpx;
  position: absolute;
  bottom: 30rpx;
  left: 40rpx;
  justify-content: space-between;
}

.member-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.member-num {
  margin-bottom: 10rpx;
  font-size: 34rpx;
  font-weight: bold;
  /* font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; */
  font-family: Din !important;
  font-style: italic;
  color: #fff;
}

.member-item-name {
  color: #fff;
  font-size: 26rpx;
}

.main {
  padding: 30rpx;
}
.main-item {
  margin-bottom: 20rpx;
}
.main-top {
  padding: 0 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}
.show-more {
  display: flex;
  align-items: center;
  position: absolute;
  right: 50rpx;
}
.show-more-title {
  color: #999;
  margin-right: 15rpx;
}
.show-more-img {
  width: 22rpx;
  height: 22rpx;
}
.main-lists {
  display: flex;
  flex-wrap: wrap;
}
.main-detail {
  margin-top: 40rpx;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main-detail-img {
  margin-bottom: 20rpx;
  height: 40rpx;
  width: 40rpx;
}
.main-detail-title {
  font-size: 28rpx;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
}
